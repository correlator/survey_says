<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2 class="text-center">Vendors</h2>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<h2>
			<button onclick='$(".vendor-form-row").slideDown()' class= "btn btn-sm btn-wide btn-primary">
				<span class="glyphicon glyphicon-plus"></span>
				Add Vendor
			</button>
		</h2>
		</div>
	</div>
	<div class="row vendor-form-row", hidden=true>
		<%= render '/vendors/inline_form', vendor: Vendor.new %>
	</div>
  </br>
  </br>
	<table class="table table-bordered table-striped" id="vendor-table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @vendors.each do |vendor| %>
				<%= render('/vendors/table_row', vendor: vendor) %>
			<% end %>
		</tbody>
	</table>
</div>
