<tr id="<%= "participant-tablerow-#{participant.id}" %>" data-updateurl="<%= participant_path(participant, format: :js) %>">
  <td><%= participant.name %></td>
  <td><%= participant.phone %></td>
  <td><%= participant.email %></td>
	<td>
    <%= link_to 'Show', participant_url(participant),
                        class: 'btn btn-xs btn-success' %> &nbsp
    <%= link_to 'Edit', edit_participant_url(participant, format: :js),
                        remote: true, class: 'btn btn-xs btn-info' %>
  </td>
</tr>
